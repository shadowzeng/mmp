{
  "name": "mindap",
  "version": "0.0.1",
  "description": "JavaScript library to draw mind maps.",
  "keywords": [
    "mindmap"
  ],
  "homepage": "https://github.com/shadowzeng/mindap",
  "license": "MIT",
  "main": "build/mindap.min.js",
  "scripts": {
    "git-config": "git config include.path ../.gitconfig",
    "start": "rollup -c -w",
    "docs": "typedoc ./src --out ./docs --module umd",
    "build": "rollup -c --environment BUILD:production -p terser",
    "release": "yarn run build",
    "webpack": "webpack serve --open"
  },
  "dependencies": {
    "d3": "6.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/d3": "6.2.0",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^4.5.1-alpha.0",
    "@typescript-eslint/parser": "^4.5.1-alpha.0",
    "chai": "4.1.2",
    "eslint": "^7.15.0",
    "mocha": "5.2.0",
    "rollup": "2.39.1",
    "rollup-plugin-json": "3.0.0",
    "rollup-plugin-livereload": "0.6.0",
    "rollup-plugin-serve": "0.4.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.1",
    "ts-loader": "^8.0.14",
    "typedoc": "^0.17.7",
    "typescript": "4.1.3",
    "uglify-js": "3.4.7",
    "webpack": "5.15.0",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.2"
  }
}
